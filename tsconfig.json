{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./dist",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
