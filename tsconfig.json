{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./dist",
    "incremental": true,
    "strict": true,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
